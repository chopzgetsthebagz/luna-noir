# Telegram Bot Configuration
TELEGRAM_TOKEN=your_telegram_bot_token_here
WEBHOOK_URL=your_ngrok_webhook_url_here

# LLM Provider Configuration
# Options: openai, openrouter, groq, open_llm
LLM_PROVIDER=groq
MODEL_PROVIDER=groq

# Open-Source LLM Configuration (Ollama, LM Studio, text-generation-webui)
LLM_API_BASE=http://localhost:11434/v1
LLM_MODEL=phi3:mini
LLM_API_KEY=none

# Safety/Boundary Filter (set to 'off' for NSFW mode to work properly)
SAFETY_MODE=off    # medium | strict | off

# OpenAI Configuration (legacy/fallback)
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4-turbo-preview

# OpenRouter Configuration
OPENROUTER_API_KEY=your_openrouter_api_key_here
OPENROUTER_MODEL=meta-llama/Meta-Llama-3.1-70B-Instruct

# Groq Configuration (RECOMMENDED - Fast & Free)
GROQ_API_KEY=your_groq_api_key_here
# SPEED OPTIMIZED: Using fastest model for instant responses
# Options: llama-3.3-70b-versatile (balanced), llama-3.1-8b-instant (FASTEST)
GROQ_MODEL=llama-3.1-8b-instant

# Stripe Payment Configuration
STRIPE_SECRET_KEY=sk_test_your_secret_key_here
STRIPE_PUBLISHABLE_KEY=pk_test_your_publishable_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here
STRIPE_PRICE_ID=price_your_price_id_here
SUCCESS_URL=https://t.me/Lunanoircompanionbot
CANCEL_URL=https://t.me/Lunanoircompanionbot

# Promo/Marketing Configuration
DISCORD_WEBHOOK_URL=
REDDIT_CLIENT_ID=
REDDIT_CLIENT_SECRET=
REDDIT_USERNAME=
REDDIT_PASSWORD=
REDDIT_USER_AGENT=LunaNoirBot/1.0 by <your_user>

# Analytics/Metrics Configuration
ADMIN_USER_ID=
METRICS_DB=data/metrics.db

# Voice/TTS Configuration
ELEVENLABS_API_KEY=your_elevenlabs_api_key_here
ELEVENLABS_VOICE_ID=your_elevenlabs_voice_id_here
# SPEED OPTIMIZED: Voice disabled by default for instant text responses
# Users can enable with /voice on command
VOICE_ENABLED_DEFAULT=false

# Stripe Tiered Subscriptions (optional)
STRIPE_TIER_BRONZE=
STRIPE_TIER_SILVER=
STRIPE_TIER_GOLD=
FLASK_PORT=5000
FLASK_DEBUG=False
FLASK_SECRET_KEY=your_flask_secret_key_here

# Application Settings
APP_ENV=development
LOG_LEVEL=INFO
